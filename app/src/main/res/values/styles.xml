<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--for ripple effect color-->
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:windowBackground">@android:color/black</item>
        <!--set menu icon in action bar-->
        <item name="homeAsUpIndicator">@drawable/back</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
        <item name="menuDrawerStyle">@style/MenuDrawerStyle</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--for ripple effect color-->
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardWidgetStyle" parent="@android:style/Theme.DeviceDefault">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">#7D868C</item>
        <item name="colorControlNormal">@color/mdtp_white</item>
        <item name="colorControlActivated">#7D868C</item>
        <item name="colorControlHighlight">@color/cpb_red</item>
    </style>

    <style name="MenuDrawerStyle" parent="Widget.MenuDrawer">
        <item name="mdActiveIndicator">@drawable/menu_icon</item>
        <item name="mdMenuSize">260dp</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white_transparent</item>
    </style>
</resources>
