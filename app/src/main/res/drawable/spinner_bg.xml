<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
                    <stroke android:width="1dp" android:color="#FFFFFF" />
                    <corners android:radius="40dp" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                </shape>
            </item>
            <item android:bottom="15dp" android:left="15dp" android:right="25dp" android:top="15dp">
                <bitmap android:gravity="top|right" android:src="@drawable/down_arrow" />
            </item>
        </layer-list>
    </item>
</selector>